<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>Eml2Html</RootNamespace>
    <AssemblyName>eml2html</AssemblyName>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>

    <!-- Assembly / package metadata -->
    <Version>1.0.0</Version>
    <Authors>Blackline IT</Authors>
    <Company>Blackline IT</Company>
    <Product>eml2html</Product>
    <Description>Windows shell extension to convert .eml files to self-contained HTML or extract to a folder with images and attachments.</Description>
    <Copyright>Copyright Â© 2026 Blackline IT</Copyright>
    <PackageProjectUrl>https://github.com/blacklineit/eml2html</PackageProjectUrl>
    <RepositoryUrl>https://github.com/blacklineit/eml2html</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MimeKit" Version="4.*" />
  </ItemGroup>

</Project>
